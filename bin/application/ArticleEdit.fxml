<AnchorPane prefHeight="410.0" prefWidth="550.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ArticleEditController">
   <children>
      <ImageView fx:id="image" fitHeight="100.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="40.0"/>
      <Label text="News Online" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <VBox layoutX="421.0" layoutY="14.0" prefHeight="100.0" prefWidth="330.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="14.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Title:">
                     <HBox.margin>
                        <Insets right="40.0" />
                     </HBox.margin></Label>
                  <TextField fx:id="title" prefWidth="250.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Subtitle:">
                     <HBox.margin>
                        <Insets right="23.0" />
                     </HBox.margin></Label>
                  <TextField fx:id="subtitle" prefWidth="250.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Categorie:">
                     <HBox.margin>
                        <Insets right="13.0" />
                     </HBox.margin></Label>
                  <MenuButton fx:id="category" layoutX="14.0" layoutY="380.0" mnemonicParsing="false" text="Category">
		              <items>
		                <MenuItem mnemonicParsing="false" text="All" onAction="#selectAll"/>
		                <MenuItem mnemonicParsing="false" text="National" onAction="#selectNational"/>
		                <MenuItem mnemonicParsing="false" text="International" onAction="#selectInternational"/>
		                <MenuItem mnemonicParsing="false" text="Sport" onAction="#selectSport"/>
		                <MenuItem mnemonicParsing="false" text="Economy" onAction="#selectEconomy"/>
		              </items>
		            </MenuButton>
               </children>
            </HBox>
         </children>
      </VBox>
      <HTMLEditor fx:id="text" layoutX="9.0" layoutY="166.0" prefHeight="200.0" prefWidth="530.0" style="-fx-border-color: #000; -fx-border-radius: 8px;" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="150.0" />
      <HBox alignment="CENTER" layoutX="7.0" layoutY="346.0" prefHeight="30.0" prefWidth="530.0" AnchorPane.bottomAnchor="30.0" AnchorPane.topAnchor="360.0">
         <children>
            <JFXButton buttonType="RAISED" prefWidth="70.0" style="-fx-background-color: lightgrey;" text="back" onAction="#goBack">
               <HBox.margin>
                  <Insets right="15.0" />
               </HBox.margin>
            </JFXButton>
            <JFXButton buttonType="RAISED" prefWidth="90.0" style="-fx-background-color: lightgrey;" text="send &amp; back" onAction="#send">
               <HBox.margin>
                  <Insets right="15.0" />
               </HBox.margin>
            </JFXButton>
            <JFXButton buttonType="RAISED" prefWidth="80.0" style="-fx-background-color: lightgrey;" text="save to file" onAction="#write">
               <HBox.margin>
                  <Insets right="50.0" />
               </HBox.margin>
            </JFXButton>
            <JFXButton buttonType="RAISED" prefWidth="80.0" style="-fx-background-color: lightgrey;" text="text/html">
               <HBox.margin>
                  <Insets right="15.0" />
               </HBox.margin>
            </JFXButton>
            <JFXButton fx:id="btnText" buttonType="RAISED" onAction="#switchText" prefWidth="100.0" style="-fx-background-color: lightgrey;" text="show body">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </JFXButton>
         </children>
      </HBox>
   </children>
</AnchorPane>
